<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.PlayerIndividual.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.PlayerIndividual.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.PlayerIndividual.Dialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.PlayerIndividual.Dialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.PlayerIndividual.Dialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.PlayerIndividual.Dialog.Button.Neutral</item>
    </style>

    <style name="TextAppearance.PlayerIndividual.Dialog.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.PlayerIndividual.Dialog.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.PlayerIndividual.Dialog.Button.Positive" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.PlayerIndividual.Dialog.Button.Negative" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Widget.PlayerIndividual.Dialog.Button.Neutral" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
